@page
@using ToDosApplication.Models
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}


    <h1 class="display-4">Welcome</h1>
    <a asp-page="Create" class="btn btn-primary" >Add New</a>
    <div class="text-center">
        <form method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Added Date</th>
                        <th>Completed</th>
                        <th>Actions</th>
                   </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.toDoList.Count; i++)
                    {
                        var item = Model.toDoList[i];
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsCompleted)
                            </td>
                            <td>
                                 <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a>
                                 <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-primary">Delete</a>
                            </td>
                   
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>

